{
    "name": "__MSG_appName__",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/lunr.js",
            "scripts/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "recall",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "all_frames": false,
            "js": [
                "scripts/immutable.js",
                "scripts/indexer.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle"
        }
    ],
    "omnibox": {
        "keyword": "recall"
    },
    "optional_permissions": [
        "history",
        "management"
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "128": "icons/icon.png"
    }
}